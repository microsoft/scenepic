{
    "include": [
        "tssrc/**/*.ts"
    ],
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": false,
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "allowJs": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "rootDir": ".",
        "outDir": "build",
        "types": [
            "node",
            "gl-matrix"
        ]
    }
}